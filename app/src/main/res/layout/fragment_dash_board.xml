<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ActionBarStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragment.DashBoardFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_20sdp">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeToRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/eventMaster"
                            style="@style/ButtonStyle"
                            android:layout_width="match_parent"
                            android:drawableLeft="@drawable/baseline_event_24"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:minHeight="@dimen/_50sdp"
                            android:text="Event\n Master" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/packageMaster"
                            style="@style/ButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/baseline_wysiwyg_24"
                            android:minHeight="@dimen/_50sdp"
                            android:text="Package\nMaster" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addEvent"
                            style="@style/ButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/baseline_event_24"
                            android:minHeight="@dimen/_50sdp"
                            android:text="+ New\nEvent" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/showAllEvents"
                            style="@style/ButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/baseline_event_24"
                            android:minHeight="@dimen/_40sdp"
                            android:text="Show\nAll Events" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/customers"
                            style="@style/ButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/baseline_groups_2_24"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:minHeight="@dimen/_50sdp"
                            android:text="Customers" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/payments"
                            style="@style/ButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:drawableLeft="@drawable/baseline_payment_24"
                            android:layout_weight="1"
                            android:minHeight="@dimen/_50sdp"
                            android:text="Payment" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/gallery"
                            style="@style/ButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/baseline_insert_photo_24"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:minHeight="@dimen/_50sdp"
                            android:text="Gallery" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/transfer"
                            style="@style/ButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:drawableLeft="@drawable/baseline_compare_arrows_24"
                            android:layout_weight="1"
                            android:minHeight="@dimen/_50sdp"
                            android:text="Exposing" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="@dimen/_1sdp"/>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/black"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_height="@dimen/_1sdp"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="#FEF7FF"
                        app:strokeColor="#FEF7FF"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <com.applandeo.materialcalendarview.CalendarView
                            android:id="@+id/calendarView"
                            app:pagesColor="#FEF7FF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:headerColor="#FEF7FF"
                            app:abbreviationsBarColor="#FEF7FF"
                            app:headerLabelColor="@color/black" />
                    </com.google.android.material.card.MaterialCardView>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/black"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_height="@dimen/_1sdp"/>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/black"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_height="@dimen/_1sdp"/>



                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>