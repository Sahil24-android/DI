<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.EventManagement" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/blueColorDark</item>
<!--        <item name="android:windowBackground">@drawable/wallpaper</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.EventManagement" parent="Base.Theme.EventManagement" />

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corner</item>
    </style>

    <style name="CardViewStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
       <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">@android:color/transparent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/blueColorDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <!-- Add more styling attributes as needed -->
    </style>


    <style name="FloatingButton">
        <item name="android:backgroundTint">@color/blueColorDark</item>
    </style>

    <!-- TextView Style -->
    <style name="TextViewStyle">
        <item name="android:textColor">@color/blueColorLight</item>
        <!-- Add more styling attributes as needed -->
    </style>

    <style name="ActionBarStyle">
        <item name="android:background">@drawable/linear_gradient</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CornerCut" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">25%</item>
        <item name="cornerSizeBottomLeft">25%</item>
        <item name="cornerSizeBottomRight">50%</item>

    </style>

    <style name="RoundedCornersDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/rounded_dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="CornerCut2" parent="">
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

    <style name="CornerSize50Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

</resources>